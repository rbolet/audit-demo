{
  "name": "audit-demo",
  "version": "1.0.0",
  "private": true,
  "description": "Physical condition audit management system",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "api:migrate": "cd apps/api && php artisan migrate",
    "api:seed": "cd apps/api && php artisan db:seed",
    "api:fresh": "cd apps/api && php artisan migrate:fresh --seed",
    "api:serve": "cd apps/api && php artisan serve",
    "api:test": "cd apps/api && php artisan test",
    "api:format": "cd apps/api && ./vendor/bin/pint",
    "api:format:check": "cd apps/api && ./vendor/bin/pint --test",
    "api:analyze": "cd apps/api && ./vendor/bin/phpstan analyse",
    "setup": "pnpm install && pnpm docker:up && sleep 3 && pnpm api:fresh",
    "prepare": "husky"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ],
    "apps/api/**/*.php": [
      "cd apps/api && ./vendor/bin/pint"
    ]
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
